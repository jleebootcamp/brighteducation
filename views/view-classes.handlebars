<div class="row">
  <div class="col-auto">
    <h2>Welcome!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Class:</h3>

    <form class="form new-class-form">
      <div class="form-group">
        <label for="subject-name">Subject name:</label>
        <input class="form-input" type="text" id="subject-name" name="subject-name" />
      </div>
      <div class="form-group">
        <label for="grade_level">Grade level:</label>
        <input class="form-input" type="number" id="grade_level" name="grade_level" />
      </div>
      <div class="form-group">
        <label for="tutor_id">Tutor Id:</label>
        <textarea class="form-input" id="tutor_id" name="tutor_id"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Class</button>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    <h3 type="button" class="btn btn-primary" id="viewclasses" >Current Classes:</h3>
  </div>

  {{#if subjects.length}}
  <div class="col-md-6 class-list">

    {{#each subjects as |subject|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/classes/{{subject.subject_id}}">{{subject.subject}}</a></h4>
        <h6><a href="/classes/{{subject.subject_id}}"><span>Grade level:</span>{{subject.grade_level}}</a></h6>
        <h6><a href="/classes/{{subject.subject_id}}"><span>Tutor Id:</span>{{subject.tutor_id}}</a></h6>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{subject.subject_id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

  {{#if subjects.length}}
  <script src="../../js/classes.js"></script>
  {{else}}
  <script src="./js/classes.js"></script>
  {{/if}}